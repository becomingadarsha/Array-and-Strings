#include<stdio.h>
#include<string.h>
int main()
{
	char str[100],remstr[100];
	int i,j=0;
	printf("enter a sentence:");
	gets(str);
	for(i=0;i<strlen(str);i++)
	{
		
		if(str[i]==' ')
		continue ;
		remstr[j]=str[i];
		j++;
	}
	remstr[j]='\0';
	printf("the string after removing space is \n %s",remstr);
}
