#include<stdio.h>
#include<string.h>
int main()
{
	int i, vowel=0, cons=0, digit=0, spchar=0, digits=0,space=0;
	char str[100];
	printf("Enter string:\n");
	gets(str);
for (i=0;i<strlen(str);i++)
{
	if (str[i]=='A'||str[i]=='a'||str[i]=='e'||str[i]=='E'||str[i]=='i'||str[i]=='I'||str[i]=='o'||str[i]=='O'||str[i]=='u'||str[i]=='U')
	{
	vowel++;
	}
	else if((str[i]>='a'&& str[i]<='z') || (str[i]>='A'&& str[i]<='Z'))
	{
		cons++;
	}
	
	else if (str[i]>=48&&str[i]<=57)
	{
		digits++;
	}
	else if (str[i] == ' ')
	{
	space++;
	}

}
spchar=strlen(str)-vowel-cons-space-digits;
printf("vowel=%d\nConsonant=%d\nDigits=%d\nwhite spaces=%d\nSpecial Character=%d\n",vowel,cons,digits,space,spchar);
}
