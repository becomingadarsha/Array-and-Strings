#include<stdio.h>
int main()
{
	int i,avg,n,j,k,a[100],larg,small;
	printf("How many numbers to be inputed?\t");
	scanf("%d",&n);
	printf("\nEnter elements one by one:\n");
		for(i=0;i<n;i++)
		{
			printf("a[%d]=",i);
			scanf("%d",&a[i]);
		}
	larg=a[0];
	for(i=1;i<n;i++)
	{
		if(larg<a[i])
		{
			larg=a[i];
		}
	}
	small=a[0];
	for(i=1;i<n;i++)
{
	if(small>a[i])
	{
		small=a[i];
	}
}
	printf("\nThe smallest number is %d and largest number is %d",small,larg);
	return 0;
}
